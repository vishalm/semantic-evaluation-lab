	@echo "âœ… Validating configuration..."
	docker-compose config > /dev/null && echo "âœ… Docker Compose configuration is valid" || echo "âŒ Docker Compose configuration has errors"

config-example-quick-start: ## ðŸš€ Generate quick start configuration
	@echo "ðŸš€ Generating quick start configuration..."
	@cat > .env.quickstart << 'EOF'
# Quick Start Configuration
